{
  "name": "riotgear",
  "version": "3.0.0",
  "description": "The open source component library for RiotJS",
  "main": "dist/rg.min.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "preriot": "rm -rf dist",
    "riot": "riot tags dist --type es6",
    "postriot": "riot demo --type es6",
    "uglify": "uglifyjs --preamble '/*!v3.0.0*/' --compress --screw-ie8 --comment false --output dist/rg.min.js dist/**/*",
    "test": "karma start",
    "dev": "npm run riot && npm run uglify",
    "build": "npm run dev && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/RiotGear/rg.git"
  },
  "keywords": [
    "riotjs",
    "riot",
    "webcomponents",
    "html5",
    "es6",
    "javascript",
    "tags",
    "components",
    "riotgear"
  ],
  "author": "Gregory Pratt",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/RiotGear/rg/issues"
  },
  "homepage": "https://riotgear.js.org/",
  "devDependencies": {
    "babel": "~5.8.34",
    "babel-core": "~5.8.34",
    "commonmark": "~0.22.0",
    "jquery": "~2.1.4",
    "karma": "~0.13.19",
    "karma-babel-preprocessor": "~5.2.2",
    "karma-coverage": "~0.5.2",
    "karma-mocha": "~0.2.0",
    "karma-mocha-reporter": "~1.1.1",
    "karma-phantomjs-launcher": "~0.2.1",
    "karma-riot": "^1.0.1",
    "karma-sinon-chai": "~1.1.0",
    "mocha": "~2.3.2",
    "moment": "~2.10.6",
    "normalize.css": "~3.0.3",
    "phantomjs": "~1.9.18",
    "riot": "^2.3.13",
    "sinon": "~1.17.2",
    "uglify-js": "~2.5.0"
  }
}
